---
import {getCollection} from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import Language from '../../components/Language.astro';
import Layout from '../../layouts/Layout.astro';

const sounds = (await getCollection('sounds')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<style>
  a {
    border: 0;
  }

  a:hover {
    color: #336699;
  }

  img {
    height: auto;
    max-width: 100%;
  }

  .Post {
    margin: 48px 0;
  }

  .Post * {
    text-decoration: none;
    transition: 0.2s ease;
  }

  .Post img {
    margin-bottom: 0.5rem;
    border-radius: 12px;
  }

  .Post a {
    display: block;
  }

  .title {
    margin-top: .5rem;
    font-size: 2rem;
  }

  .date {
    margin: .5em 0;
    color: rgb(var(--gray));
  }

  ul a:hover img {
    box-shadow: var(--box-shadow);
  }

  @media (max-width: 720px) {
    ul {
      gap: 0.5em;
    }

    ul li {
      width: 100%;
    }
  }
</style>

<Layout title="Blog" canonicalUrl="/blog/">
    <main>
        <section>
          {
            sounds.map((sound) => (
                    <article class="Post">
                        <div class="Post__content">

                            <h4 class="title">
                                <a href={`/sons/${sound.slug}`}>
                                  {sound.data.title}
                                </a>
                            </h4>
                            <p class="date">
                                <FormattedDate date={sound.data.pubDate} language="fr"/>
                            </p>
                          {sound.data.description && <p>{sound.data.description}</p>}
                        </div>
                    </article>
            ))
          }
        </section>
    </main>
</Layout>
